{
  "name": "modcss",
  "version": "0.0.1",
  "description": "Modular CSS Experiment",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "ws --port 8888",
    "js:bundle": "r_js -o mainConfigFile=main.js out=bundle.js",
    "css:bundle": "node-sass --source-comments style/style.scss bundle.css",
    "css:bundle-when-changed": "onchange 'style/**/*.scss' 'src/**/*.scss' -v -- npm run css:bundle",
    "css:create-module": "postcss -u autoprefixer"
  },
  "keywords": [
    "css"
  ],
  "author": "biril <alexlambiris@gmail.com>",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "local-web-server": "^1.2.6",
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "postcss": "^5.1.1",
    "postcss-cli": "^2.5.2",
    "requirejs": "^2.2.0",
    "requirejs-text": "^2.0.12"
  },
  "dependencies": {
    "backbone": "^1.3.3",
    "jquery": "^3.1.0",
    "underscore": "^1.8.3"
  }
}
